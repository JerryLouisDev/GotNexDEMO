<!doctype html>
<html>

<head>
  <title>GotNEX</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="shortcut icon" type="/image/x-icon" href="/img/logo.ico">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin="" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA==" crossorigin=""></script>

</head>

<body>
  <nav>
    <a href="/"><img id="logo" src="/img/logo.png" alt="GotNEX Logo"></a>
    <div>
      <a href="/logout" class="btn btn-default btn-sm"><span class="fa fa-user"></span>Logout</a>

    </div>
  </nav>
  <div class="container" id="parkPage">

    <div class="page-header text-center">
      <h1><span class="fas fa-basketball-ball"></span> <%=park.name%> </h1>
      <!-- <a href="/checkin/<%=park._id%>"><button id="checkIn"type="button" name="CheckInButton">Check In</button></a> -->
      <form class="checkIn" action="/checkin/<%=park._id%>" method="post">
        <button type="submit" name="button">Check In</button>
      </form>
      <form class="checkOut" action="/checkout/<%=park._id%>" method="post">
        <button id="checkOut"type="submit" name="CheckOutButton">Check Out</button>
      </form>

      <a href="/FavoritePark"><button id="favButton"type="button" name="button">Favorite Parks</button></a>


    </div>
    <br><br>
    <div class="parkInfo">
      <button class="saveParkFav" type="submit" name="saveParkFav">Save Park</button>
      <h2>Park Address:</h2>
      <p id="address"><%=park.address%></p>
      <p>Local User ID: <%=user.local.username%></p>
      <h3>Number of Hoopers: </h3>
      <ul>
        <% for(var i=0; i<1; i++) {%>
          <li class="numberOfHoopers"><%=checkins.length%></li>
        <% } %>
      </ul>
      <h3>UserName</h3>
      <ul>
        <% for(var i=0; i<checkins.length; i++) {%>
          <li class="numberOfHoopers"><%=checkins[i].username%></li>
        <% } %>
      </ul>
      <h2> Time Checked In:</h2>
      <ul>
        <% for(var i=0; i<checkins.length; i++) {%>
          <ul class="checkInTimes">
            <li>
              <%=checkins[i].timestamp%>
              <%=checkins[i].userid%>
              <i class="fa fa-trash" aria-hidden="true"></i>
            </li>
          </ul>
          <% } %>
        </ul>
    </div>

    <div class="parkPicture">

      <img class="parkphoto" src="/img/<%=park.image%>" alt="<%=park.name%>">
    </div>

  </div>

  <script src="/main.js"></script>
  <script>

  </script>

</body>

</html>
